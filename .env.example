# Photobooth Configuration Template
# Copy this to .env and customize for your installation

# Security
SECRET_KEY=your-super-secret-flask-key-change-this
SETTINGS_PASSWORD=admin123

# Database
DATABASE_PATH=/opt/photobooth/data/photobooth.db

# Photo Settings
PHOTO_WIDTH=1800
PHOTO_HEIGHT=1200
PHOTO_QUALITY=85
THUMBNAIL_SIZE=300

# Printer Settings
DEFAULT_PRINTER=
PRINT_PAPER_SIZE=4x6
PRINT_DPI=300

# Audio Settings
TTS_ENABLED=true
TTS_VOICE=en+f3
TTS_RATE=150

# WiFi Access Point
AP_SSID=WeddingBooth
AP_PASSWORD=photobooth123
AP_IP=192.168.50.1
AP_SUBNET=192.168.50.0/24

# Flask Settings
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000